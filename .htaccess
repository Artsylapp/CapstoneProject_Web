# Use for Live Deployment
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index.php$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.php [L]
</IfModule>

 Error Handling
 <IfModule !mod_rewrite.c>
    ErrorDocument 404 /index.php
 </IfModule>
